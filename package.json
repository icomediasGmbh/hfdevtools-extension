{
    "name": "hfdevtools-extension",
    "displayName": "HybridForms DevTools",
    "description": "A VSCode extension for HybridForms template development",
    "version": "1.4.3",
    "publisher": "icomedias",
    "icon": "HF_Extension_icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/icomediasGmbh/hfdevtools-extension"
    },
    "engines": {
        "vscode": "^1.102.0"
    },
    "categories": [
        "Formatters",
        "Snippets"
    ],
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "configuration": {
            "title": "HybridForms DevTools"
        },
        "snippets": [
            {
                "language": "html",
                "path": "./snippets/layout/attribute-snippets.json"
            },
            {
                "language": "html",
                "path": "./snippets/layout/block-snippets.json"
            },
            {
                "language": "html",
                "path": "./snippets/layout/formcontrol-snippets.json"
            },
            {
                "language": "html",
                "path": "./snippets/layout/extended-snippets.json"
            },
            {
                "language": "javascript",
                "path": "./snippets/script/javascript-snippets.json"
            },
            {
                "language": "typescript",
                "path": "./snippets/script/typescript-snippets.json"
            },
            {
                "language": "scss",
                "path": "./snippets/style/scss-snippets.json"
            },
            {
                "language": "jsonc",
                "path": "./snippets/stages/stages-snippets.json"
            }
        ]
    },
    "main": "./dist/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool false",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test",
        "postversion": "git push && git push --tags"
    },
    "devDependencies": {
        "@eslint/js": "^9.32.0",
        "@types/js-beautify": "^1.14.3",
        "@types/mocha": "^10.0.10",
        "@types/node": "24.x",
        "@types/vscode": "^1.102.0",
        "@vscode/test-cli": "^0.0.11",
        "@vscode/test-electron": "^2.5.2",
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.3",
        "globals": "^16.3.0",
        "prettier": "^3.6.2",
        "ts-loader": "^9.5.2",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.38.0",
        "webpack": "^5.101.0",
        "webpack-cli": "^6.0.1"
    },
    "dependencies": {
        "@stylistic/eslint-plugin": "^5.2.2",
        "js-beautify": "^1.15.4"
    }
}
